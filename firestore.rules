rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // 1. ZONA PRIVADA: datos del usuario.
    // Solo el propietario puede leer/escribir su documento y cualquier subcoleccion.
    match /usuarios/{userId} {
      allow read, write: if isOwner(userId);
    }

    match /usuarios/{userId}/{document=**} {
      allow read, write: if isOwner(userId);
    }

    // 2. ZONA COMPARTIDA: cache global de paises/fotos.
    // Cualquier usuario autenticado puede leer y escribir.
    match /paises_info/{paisCode} {
      allow read, write: if isAuthenticated();
    }

    // 3. BLOQUEO POR DEFECTO: todo lo demas denegado.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
